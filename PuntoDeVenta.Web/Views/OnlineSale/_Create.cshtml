@model NewSaleView
    <!--Modal Body Start-->

<div class="modal-content">

    <!--Modal Header Start-->
    <div class="modal-header">
        <h4 class="modal-title">Add Sale</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <!--Modal Header End-->


    <form asp-action="Create" asp-controller="OnlineSale" method="post" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <div class="modal-body form-horizontal">
            <div class="form-group row">
                @Html.HiddenFor(model => model.idState)
                @Html.LabelFor(model => model.idState, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    <input asp-for="@Model.idState" placeholder="Enter Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Remarks, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    <input asp-for="@Model.Remarks" class="form-control" placeholder="Please enter your address here" required/>
                </div>
            </div>

            @*<div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
                    <div class="form-check">
                        @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-check-input" })
                        @Html.LabelFor(model => model.IsActive, new { @class = "form-check-label" })
                    </div>

                </div>
            </div>*@

        </div>
        <!--Modal Footer Start-->
        <div class="modal-footer">
            <button data-dismiss="modal" id="cancel" class="btn btn-default" type="button">Cancel</button>
            <button class="btn btn-success relative" id="btnSubmit" type="submit">
                <i class="loader"></i>
                Submit
            </button>
        </div>
        <!--Modal Footer End-->
    </form>

</div>


<!--Modal Body End-->
